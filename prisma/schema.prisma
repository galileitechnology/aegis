generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  email     String?    @unique
  username  String     @unique
  name      String
  password  String

  @@map("users")
}

model Chart {
  id     Int    @id @default(autoincrement())
  titulo String
  dados  Data[]
}

model Data {
  id      Int    @id @default(autoincrement())
  title   String
  chartId Int
  content Chart  @relation(fields: [chartId], references: [id])
}

model UrlMonitor {
  id                     Int      @id @default(autoincrement())
  url                    String   @unique
  name                   String?
  current_status         String   @default("checking") // 'checking' | 'up' | 'down' | 'error'
  last_status_code       Int?
  last_response_time_ms  Int?
  last_error_message     String?
  check_interval_seconds Int      @default(30)
  is_monitoring_active   Boolean  @default(true)
  total_checks           Int      @default(0)
  successful_checks      Int      @default(0)
  uptime_percentage      Float    @default(0)
  recent_checks          Json     @default("[]") // Array of UrlCheck objects as JSON
  last_checked_at        DateTime?
  created_at             DateTime @default(now())
  updated_at             DateTime @updatedAt

  @@index([current_status])
  @@index([is_monitoring_active])
}
